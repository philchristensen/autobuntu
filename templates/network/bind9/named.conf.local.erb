zone "<%= @dns_primary_zone %>" IN {
    type master;
    file "/etc/bind/zones/<%= @dns_primary_zone %>.db";
};

zone "<%= @dns_reverse_zone %>" {
    type master;
    file "/etc/bind/zones/rev.<%= @dns_reverse_zone %>";
};
